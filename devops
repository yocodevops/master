name: CI Pipeline

on:
  push:
    branches:
      - master

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v2

      - name: Log in to Docker Hub
        uses: docker/login-action@v2
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      - name: Build Docker image
        run: docker build -t ${{ secrets.DOCKER_USERNAME }}/your-nodejs-app:${{ github.sha }} .

      - name: Run tests
        run: |
          docker run --rm ${{ secrets.DOCKER_USERNAME }}/your-nodejs-app:${{ github.sha }} npm install
          docker run --rm ${{ secrets.DOCKER_USERNAME }}/your-nodejs-app:${{ github.sha }} npm test

      - name: Push Docker image
        run: |
          docker tag ${{ secrets.DOCKER_USERNAME }}/your-nodejs-app:${{ github.sha }} ${{ secrets.DOCKER_USERNAME }}/your-nodejs-app:latest
          docker push ${{ secrets.DOCKER_USERNAME }}/your-nodejs-app:${{ github.sha }}
          docker push ${{ secrets.DOCKER_USERNAME }}/your-nodejs-app:latest
